<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= t(".content", error_messages: pluralize(object.errors.size, t(".messages"))).html_safe %>
    </div>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li ><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
