<%= form_with url: trainer_user_courses_path(@course.id), class: "form-group" do |f| %>
  
  <%= f.hidden_field :course_id, value: @course.id %>
      
  <%= f.label :traine_assign %>
  <%= f.collection_select :user_ids, @trainees_not_course, :id, :name,
    {include_blank: false, include_hidden: false},
    { multiple: true, class: "select form-control", id: "assign-trainee-select"} %>

  <div class="col-lg-6 col-5 text-right btn-courses p-3">
    <%= f.submit t("courses.form.submit"), class: "btn btn-success" %>
  </div>
<% end %>
