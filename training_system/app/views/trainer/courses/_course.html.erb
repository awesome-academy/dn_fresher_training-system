<tr>
  <th scope="row">
    <div class="media align-items-center">
      <div class="media-body">
        <span class="name mb-0 text-sm"><%= course.name %></span>
      </div>
    </div>
  </th>
  <td class="name">
    <%= l(course.start_date) %>
  </td>
  <td>
    <span class="badge badge-dot mr-4">
      <i class="bg-warning"></i>
      <span class="status"><%= course.status %></span>
    </span>
  </td>
  <td class="name">
    <%= link_to t("views.course.index.detail_course"), trainer_course_path(course.id),  class: "btn btn-info" %>
    <% if course.status == "init" %>
      <%= link_to t("views.course.index.start_course"), trainer_course_start_course_path(course.id), class: "btn btn-danger", method: :post, remote: true %>
    <% end %>
  </td>
</tr>
