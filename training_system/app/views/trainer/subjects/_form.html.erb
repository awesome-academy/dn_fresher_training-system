<%= form_with model:@subject, url:trainer_subjects_path , class: "form-group create-subject" do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :description %>
  <%= f.text_field :description, class: "form-control" %>

  <%= f.label :duration %>
  <%= f.number_field :duration, class: "form-control" %>
  
  <%= f.fields_for :tasks, class: "form-group" do |ff| %>
    <div class="form-fields_for">
      <%= ff.label :task, class: "label-task" %>

      <%= ff.label :name_task %>
      <%= ff.text_field :name, class: "form-control name-count" %>

      <%= ff.label :description_task %>
      <%= ff.text_field :description, class: "form-control" %>

      <%= ff.label :duration_task %>
      <%= ff.number_field :duration, class: "form-control" %>
    </div>
    <div class="form-fields_for_new"></div>
  <% end %>

  <div class="col-lg-6 col-5 text-right btn-courses">
    <%= f.submit I18n.t("courses.form.submit"), class: "btn btn-success" %>
  </div>
<% end %>
<div class="buttons">
  <button class="add-task btn btn-sm btn-neutral"><%= t "views.subject.create.add_task"%></button>
  <button class="remove-task btn btn-sm btn-neutral"><%= t "views.subject.create.remove_task"%></button>
</div>
